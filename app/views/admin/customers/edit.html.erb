<h1>
  <%= @customer.name %>さんの会員情報編集
</h1>

<%= form_with model:@customer do |customer| %>
<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= customer.last_name %></td>
    <td><%= customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= customer.last_name_kana %></td>
    <td><%= customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
        <%= f.radio_button :is_active, "TRUE" %>
        <%= f.label :is_active_TRUE, "有効" %>
      </td>
      <td>
        <%= f.radio_button :is_active, "FALSE" %>
        <%= f.label :is_active_FALSE, "退会" %>
      </td>
  </tr>
</table>

<%= link_to "変更を保存", admin_customer_path(customer.id) %>