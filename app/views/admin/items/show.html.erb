<h1>商品詳細</h1>

<%= image_tag @item.image(100,200) %>

<table>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <td>税込価格</br>
    （税抜価格）</td>
    <td><%= @item.price * 1.1 %>(<%= @item.price %>)</td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td><%= @item.is_active %></td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_item_path %>
