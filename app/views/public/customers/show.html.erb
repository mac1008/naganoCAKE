<h1>マイページ</h1>

<h1>登録情報</h1>
<%= link_to "編集する",edit_customer_path(@customer.id) %>

<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<h1>配送先</h1>
<%= link_to "一覧を見る",shipping_addresses_path(@customer.id) %>

<h1>注文履歴</h1>
<%= link_to "一覧を見る",orders_path(@customer.id) %>